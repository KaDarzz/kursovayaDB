    @model TransportCompanyWithAuthorize.Models.EmployeeSchedule

    @{
         Layout = "_Layout";
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit</title>
    </head>
    <body>

    <h4>EmployeeSchedule</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="EmployeeId" class="control-label"></label>
                    <select asp-for="EmployeeId" class="form-control" asp-items="ViewBag.EmployeeId"></select>
                    <span asp-validation-for="EmployeeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="WorkDate" class="control-label"></label>
                    <input asp-for="WorkDate" class="form-control" />
                    <span asp-validation-for="WorkDate" class="text-danger"></span>
                </div>
                    <div class="form-group">
                        <label asp-for="IsWorking" class="control-label"></label>
                        <select asp-for="IsWorking" class="form-control">
                            <option value="true" selected="@Model.IsWorking">True</option>
                            <option value="false" selected="@(Model.IsWorking == false)">False</option>
                        </select>
                        <span asp-validation-for="IsWorking" class="text-danger"></span>
                    </div>


                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

    </body>
    </html>
